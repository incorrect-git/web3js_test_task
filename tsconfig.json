{
  "compilerOptions": {
    "target": "es5",                                     
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "moduleResolution": "node",                       
    "outDir": "./dir",                                
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,         

    "strict": true,                                   
    "skipLibCheck": true                              
  },
  "exclude":[
      "./node_modules"
  ]
}
